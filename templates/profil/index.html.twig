{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="global-container"> 
<h1>PROFIL</h1>  
    <div class="edit-btn">
        <div>
            <a href="{{path('app_profil_edit')}}">UPDATE PROFIL</a>
        </div>
        <div>
            <a href="{{path('app_profil_music')}}">YOUR MUSIC</a>
            {# <a href="{{path('app_profil_comment')}}">YOUR COMMENTS</a> #}
            {# <a href="{{path('app_profil_favorites')}}">YOUR FAVORITES</a> #}
        </div>
    </div>
    <div class="container" id="profil">
        <img id="photoprofil" src="{{ asset('images/media/' ~ app.user.media) | imagine_filter('my_thumb')}}" alt="{{ app.user.media }}">
        <label for="inputEmail">Username</label>
        <span>{{ app.user.username }}</span>
        <label for="inputEmail">Email</label>
        <span>{{ app.user.email }}</span>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="small-btn" href="{{path('universounddashboard')}}">ADMINISTRATOR ACCESS</a>
        {% endif %}
    </div>
</div>
{% endblock %}
