{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}
<div class="global-container"> 
    <h1>EDIT YOUR TRACK</h1>
    <div class="container">
            {{ form_start(form)}}
            {{ form_row(form.mediaFile, { 'label': 'Artwork', 'attr': {'class': 'vichfilebutton1'} })  }}
                <a class="downloadbutton" id="upload1">UPLOAD FILE</a>
            {{ form_row(form.audioFile, { 'label': 'Audio', 'attr': {'class': 'vichfilebutton2'} })  }}
                 <a class="downloadbutton" id="upload2">UPLOAD FILE</a>
            {{ form_widget(form) }}
            <div id="btn-form-edit">
                <a class="middle-btn" href="{{ path('app_stream')}}">BACK</a>
                <input class="middle-btn" type="submit" value="UPDATE">
            </div>
            {{ form_end (form) }}  
            {{ include('stream/delete.html.twig') }}
    </div>
</div>
{% endblock %}
