{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
{% if not app.user %}
 <section class="empty"> 
        <div id="empty-container">
        <h1>UPLOAD</h1>
                <div id="empty-container-in">
                        <span class="info-message"> 
                                <a href="{{path('app_login')}}">LOGIN</a>
                        </span>
                </div>
        </div>
</section>
{% else %}
        <section class="other-section"> 
                <h1>UPLOAD</h1>
                <div class="container">
                        {{ form_start(form)}}
                        {{ form_row(form.mediaFile, { 'label': 'Artwork' }) }}
                        {{ form_widget(form) }}
                        <input class="big-btn" type="submit" value="UPLOAD">
                        {{ form_end (form) }} 
                </div>
        </section>
{% endif %}
{% endblock %}
