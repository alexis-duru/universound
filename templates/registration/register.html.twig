{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="global-container"> 
        <h1>Register</h1>  
            <div class="container">
                {{ form_start(registrationForm) }}
                <a class="downloadbutton" id="upload3">CHOOSE YOUR AVATAR</a>
                {{ form_widget(registrationForm.mediaFile, { 'label': 'Choose your avatar',  'attr': {'class': 'vichfilebutton3'} }) }}
                {# {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.lastname) }} #}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, { label: 'Password'}) }}
                {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert" role="alert">{{ flashError }}</div>
                {% endfor %}
                <button type="submit" class="middle-btn">Register</button>
                {{ form_end(registrationForm) }}
            </div>
    </div>
{% endblock %}

